  <div class="container">
    <%@posts.each do |post|%>

      <div class="row post-row">
        <div class="col-2">
          <%= post.user.username%>
        </div>
        <div class="col-8">
          <%= post.content%>
        </div>
        <div class="col-2">
          Likes and views
        </div>
      </div>
    <%end%>
  </div>
    

</div>