

<%= form_with(model: @post, url: new_post_path) do |f| %>
    <div class="field">
      <%= f.label :title, "Title"%>
      <%= f.text_field :title %>
    </div>

  <div class="field">
    <%= f.hidden_field :content, id: :post_content %>
    <trix-editor input="post_content"></trix-editor>
  </div>

  <div>
    <%= f.submit "Create post", class:"btn btn-primary"%>
  </div>

<% end %>