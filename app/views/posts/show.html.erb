<div class="col">
  <div class="d-flex justify-content-between">
    <div>
      <h4><%=@post.title%></h4>
      <h6><%=@post.user.username%></h6>
    </div>
    <div>
      <%if current_user.try(:is_moderator?)%>
        <div class="bootstrap-switch-container">
          <label class="boostrap-switch-label">ON</label>
        </div>
        <div class="bootstrap-switch-container" style="">
          <span class="bootstrap-switch-handle-on bootstrap-switch-primary">ON</span>
          <label class="bootstrap-switch-label">&nbsp;</label>
          <span class="bootstrap-switch-handle-off bootstrap-switch-default">OFF</span>
          <input type="checkbox" checked="" data-toggle="switch" id="custom-switch-01">
        </div>
      <%end%>
    </div>
  </div>
  <!-- The post itself -->
  <div class="container gray-container">
    <div class="row post-row border white-background">
      <div class="col-2 text-center">
        <span class="font-weight-bold"><%= @post.user.username%></span>
      </div>
      <div class="col-10">
        <div class="trix-content"><%=sanitize @post.content%></div>
      </div>
    </div>
  </div>
  <!-- The comments -->
  <% @post.comments.each do |comment|%>
    <div class="container gray-container">
      <div class="row post-row border white-background">
        <div class="col-2 text-center">
          <span class="font-weight-bold"><%= comment.user.username%></span>
        </div>
        <div class="col-10">
          <div class="trix-content"><%=sanitize comment.content%></div>
        </div>
      </div>
    </div>
  <%end%>

  <%= render 'comments/comment_form'%>



</div>